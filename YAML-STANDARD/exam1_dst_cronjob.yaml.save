apiVersion: batch/v1
kind: CronJob
metadata:
  name: postgres-backup
spec:
  schedule: "*/6 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: backup
            image: postgres:12.0-alpine
            command: ["/bin/sh", "-c", "/scripts/backup-script.sh"]
            volumeMounts:
            - name: backup-script
              mountPath: /scripts
            - name: backup-volume
              mountPath: /mnt/data/backup
            - name: postgres-secret
              mountPath: /var/secrets
              readOnly: true
          restartPolicy: OnFailure
          volumes:
          - name: backup-script
            configMap:
              name: backup-script-exam1
          - name: backup-volume
            persistentVolumeClaim:
              claimName: backup-log-pvc
            hostPath:
              path: /home/ubuntu/backup/exam1-dst
          - name: postgres-secret
            secret:
              secretName: postgres-secret

